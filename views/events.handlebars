
<body>
    <!-- Header Section -->
    <header class="bg-blue-500 p-4 text-white text-lg font-semibold">
        <div class="container mx-auto flex justify-between">
            <span>Home</span>
            <a href="/dashboard" class="text-white hover:text-gray-300">My Schedule</a>
        </div>
    </header>

    <!-- Main Content Section -->
    <div class="container mx-auto mt-4 p-4 bg-white rounded shadow">
        <!-- Title -->
        <h2 class="text-center text-3xl font-bold my-4">Find Events</h2>

        <!-- Search Description -->
        <p class="text-center mb-4">
            Enter your location to find events near you. Add exciting events to your calendar and interact with other users. Discover your next adventure with Event Connect!
        </p>

        <!-- Search Form -->
        <div class="text-center p-4">
            <form id="search-form">
                <input type="text" id="search-input" placeholder="Enter a city (e.g., New York)" class="p-2 border rounded">
                <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">Search</button>
            </form>
        </div>

        <!-- Events Listing Section -->
        <section id="events-list" class="p-4">
            <!-- Dynamic content from Ticketmaster API will be displayed here -->
        </section>
    </div>

    <!-- Include JavaScript for event search -->
    <script src="/js/searchEvents.js"></script>
</body>
</html>
