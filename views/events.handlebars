<!-- Events Search Page -->
<div class="container mx-auto p-4">
    <!-- Top Navigation Links -->
    <div class="flex justify-between mb-4">
        <button onclick="location.href='/dashboard'" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">My Events</button>
    </div>

    <!-- Main Content Section -->
    <div class="mt-6">
        <!-- Title and Search Description -->
        <h2 class="text-center text-3xl font-bold my-4">Find Events</h2>
        <p class="text-center text-lg mb-4">
            Enter your location to find events near you. Add exciting events to your calendar and interact with other users. Discover your next adventure with Event Connect!
        </p>

        <!-- Search Form -->
        <div class="text-center mb-6">
            <form id="search-form">
                <input type="text" id="search-input" placeholder="Enter a city (e.g., New York)" class="p-2 border rounded">
                <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-3 px-6 rounded">Search</button>
            </form>
        </div>

        <!-- Events Listing Section -->
        <section id="events-list" class="p-4">
            <!-- Dynamic content from Ticketmaster API will be displayed here -->
        </section>
    </div>
</div>

<!-- Include JavaScript for event search -->
<script src="js/searchEvents.js"></script>
