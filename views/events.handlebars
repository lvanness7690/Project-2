{{> layouts/main }}

<div class="text-right p-4">
    <a href="/dashboard" class="text-blue-600 hover:text-blue-800">My Events</a>
</div>

<div class="text-center p-4">
    <input type="text" placeholder="Search events..." class="p-2 border rounded">
</div>

<section class="container mx-auto p-4">
    {{#each allEvents as |event|}}
        <div class="p-4 border rounded my-2">
            <h3 class="font-semibold">{{event.title}}</h3>
            <p>{{event.date}}</p>
            <p>{{event.description}}</p>
            <a href="/event/{{event.id}}" class="text-blue-600 hover:text-blue-800">View Details</a>
        </div>
    {{/each}}
</section>
