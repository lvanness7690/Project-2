<!-- Events Page: Displays a list of events -->

<!-- Navigation to My Schedule -->
<div class="text-right p-4">
    <a href="/dashboard" class="text-blue-600 hover:text-blue-800">Search For Events</a>
</div>

<!-- Search Bar for Events -->
<div class="text-center p-4">
    <input type="text" placeholder="Search events..." class="p-2 border rounded" id="searchInput">
    <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" type="button">Search</button>
</div>

<!-- Events Listing Section -->
<section class="container mx-auto p-4">
    {{#each events as |event|}} <!-- Adjusted to 'events' -->
        <div class="p-4 border rounded my-2">
            <!-- Event Title -->
            <h3 class="font-semibold">{{event.title}}</h3> <!-- Adjust these as per your event data structure -->
            <!-- Event Date -->
            <p>{{event.date}}</p>
            <!-- Event Description -->
            <p>{{event.description}}</p>
            <!-- Link to Event Details -->
            <a href="/event/{{event.id}}" class="text-blue-600 hover:text-blue-800">View Details</a>
        </div>
    {{/each}}
</section>
