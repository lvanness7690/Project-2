<!-- User's Dashboard Page: Shows events the user is attending -->

<div class="container mx-auto p-4">
    <!-- Top Navigation Links -->
    <div class="flex justify-between mb-4">
        <button onclick="location.href='/events'" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">Find More Events</button>
    </div>

    <!-- Main Content Section -->
    <div class="mt-6">
        <!-- Title -->
        <h2 class="text-center text-3xl font-bold my-4">My Schedule</h2>
        <!-- Events Listing Section -->
        <section id="events-list" class="p-4">
            <!-- Iterating over each event and displaying information -->
            {{#each events as |event|}}
            <div class="flex justify-between items-center bg-white p-4 border border-gray-200 rounded-lg mb-4 shadow">
                <!-- Event Title, Date, and Location -->
                <div>
                    <h3 class="text-lg font-bold text-blue-600">{{event.name}}</h3>
                    <p class="text-gray-600">Date: {{event.date}}</p>
                    <p class="text-gray-600">Location: {{event.location}}</p>
                </div>
                <!-- Link to Event Details -->
                <a href="/event/{{event.id}}" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline transition duration-300 ease-in-out">More Info</a>
            </div>
            {{/each}}
        </section>
    </div>
</div>
