<!-- User's Dashboard Page: Shows events the user is attending -->

<!-- Link to Event Search -->
<div class="text-right p-4">
    <a href="/events" class="text-blue-600 hover:text-blue-800">Find Events</a>
</div>

<!-- List of User's Events -->
<section class="container mx-auto p-4">
    <div class="text-center text-3xl font-bold my-4">My Schedule</div>
    {{#each userEvents as |event|}}
        <div class="p-4 border rounded my-2">
            <!-- Event Title -->
            <h3 class="font-semibold">{{event.title}}</h3>
            <!-- Event Date -->
            <p>{{event.date}}</p>
            <!-- Event Description -->
            <p>{{event.description}}</p>
            <!-- Link to Event Details -->
            <a href="/event/{{event.id}}" class="text-blue-600 hover:text-blue-800">View Details</a>
        </div>
    {{/each}}
</section>
