<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Event Connect</title>
    <link rel="stylesheet" href="/css/output.css">
    <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body class="bg-gray-100 font-sans leading-normal tracking-normal">

    <header class="bg-blue-500 p-4 text-white text-lg font-semibold flex justify-between items-center">
        <div class="container mx-auto">Event Connect</div>
        <button id="logoutButton" class="bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded">Logout</button>
    </header>

    <div class="container mx-auto mt-4 p-4 bg-white rounded shadow">
        {{{body}}}
    </div>

    <footer class="bg-blue-500 p-4 mt-8 text-white text-center">
        Â© 2024 Event Connect
    </footer>

    <script>
        document.getElementById('logoutButton').addEventListener('click', function (event) {
            event.preventDefault();
            fetch('/logout', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
            })
            .then(response => {
                if (response.ok) {
                    window.location.href = '/login';
                } else {
                    console.error('Logout failed:', response.statusText);
                }
            })
            .catch(error => {
                console.error('Error during logout:', error);
            });
        });
    </script>
</body>
</html>
