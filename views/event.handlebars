{{> layouts/main }}

<div class="flex justify-between p-4">
    <a href="/dashboard" class="text-blue-600 hover:text-blue-800">Back</a>
    <a href="/dashboard" class="text-blue-600 hover:text-blue-800">My Events</a>
</div>

<article class="container mx-auto p-4">
    <h2 class="text-3xl font-bold my-4">{{event.title}}</h2>
    <p>{{event.date}}</p>
    <p>{{event.description}}</p>

    <h3 class="font-semibold mt-4">Attending:</h3>
    <ul>
        {{#each event.attendees as |attendee|}}
            <li>{{attendee.name}}</li>
        {{/each}}
    </ul>

    <h3 class="font-semibold mt-4">Messages:</h3>
    <div class="border p-2">
        {{#each event.messages as |message|}}
            <p>{{message.content}}</p>
        {{/each}}
    </div>
</article>
