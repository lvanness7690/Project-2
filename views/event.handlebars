<!-- Event Detail Page -->
<div class="container mx-auto p-4">
    <!-- Top Navigation Links -->
    <div class="flex justify-between mb-4">
        <button onclick="location.href='/events'" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">Back</button>
        <button onclick="location.href='/dashboard'" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">My Events</button>
    </div>

    <!-- Main Content -->
    <div class="flex flex-wrap -mx-2 lg:flex-nowrap">
        <!-- Event Information -->
        <article class="w-full lg:w-2/3 px-2 mb-4">
            <!-- Event Title -->
            <h2 class="text-3xl font-bold my-4 event-title">{{event.name}}</h2>

            <!-- Event Date and Location -->
            <p class="event-date text-lg">Date: {{event.date}}</p>
            <p class="event-location text-lg">Location: {{event.location}}</p>

            <!-- Event Photo -->
            <img src="{{event.image}}" alt="{{event.name}}" class="max-w-full my-4 event-image">

            <!-- Event Description -->
            <p class="event-description">{{event.description}}</p>

            <!-- Attend Button -->
            <button id="attendButton" data-event-id="{{event.id}}" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-3 px-6 rounded block mx-auto my-4">Attend</button>
        </article>

        <!-- Attending List Column -->
        <aside class="w-full lg:w-1/3 px-2">
            <h3 class="font-semibold text-xl mt-4 mb-2">Attending:</h3>
            <ul id="attendingList" class="border p-2">
               {{#each event.users}}
                    <li>{{this.username}}</li>
                 {{/each}}
            </ul>
        </aside>
    </div>

    <!-- Message Board Full Width -->
    <div class="w-full px-2 mt-6">
        <h3 class="font-semibold text-xl mt-4 mb-2">Messages:</h3>
        <div id="messageBoard" class="border p-2">
            {{#each messages as |message|}}
                <p><b>{{message.username}}</b>: {{message.content}}</p>
            {{/each}}
        </div>
        <!-- Message Input Form -->
        <form id="postMessageForm" class="mt-4">
            <textarea id="messageContent" placeholder="Write a message..." class="w-full p-2 border rounded"></textarea>
            <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-3 px-6 rounded block mx-auto my-4">Post Message</button>
        </form>
    </div>
</div>

<!-- Include JavaScript for attending and message board functionality -->
<script src="/js/eventPage.js"></script>
